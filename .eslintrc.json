{
  "env": {
    "node": true,
    "jest": true
  },
  "plugins": [
    "prettier",
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "airbnb-base",
    "prettier"
  ],
  "rules": {
    "node/exports-style": ["error", "module.exports"],
    "prettier/prettier": "error",
    "class-methods-use-this": "off",
    "global-require": "off",
    "no-use-before-define": "off"
  }
}
