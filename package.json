{
  "name": "@maxmalov/express-utils",
  "version": "0.0.0",
  "description": "Utility belt for express applications",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "npm run lint",
    "fmt": "prettier --write --single-quote --trailing-comma none './**/*.js'",
    "lint": "eslint ./"
  },
  "author": "Maxim Malov <m.malov.v@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bunyan": "^1.8.8",
    "bunyan-debug-stream": "^1.0.8",
    "nconf": "0.8.4",
    "nconf-yaml": "1.0.2"
  },
  "devDependencies": {
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "2.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3"
  },
  "lint-staged": {
    "lib/**/*.js": [
      "fmt",
      "eslint",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      ".test\\.js$"
    ],
    "notify": true
  }
}
